gpr QMMM Min
 &cntrl
  imin   = 1,
  maxcyc = 250,
  irest  = 0, ! 0- new simulation 1- restart
  ntx    = 1, ! 1-read in coordinates, but not velocity, 5-both
  cut    = 8.0,
  ig     = -1, !random seed
  ntb    = 1,
  ntpr   = 1, !print detials to log every step
  ntwx   = 1, !write coordinates to mdcrd every step
  ntwr   = 1, !write restart file every step
  ifqnt  = 1,!turn on QM/MM
/
 &qmmm
  qmmask    = ':1',
  qmcut     = 8,
  qmcharge  = 0,
  qmshake   = 0, !Shake QM H atoms if shake is turned on (NTC>1) (default)
  qm_theory = 'EXTERN',
  qm_ewald  = 0,
  qmgb      = 0,
  verbosity = 2,
  writepdb  = 1,
 /
 &tc
  executable = 'terachem',
  use_template = 1,
 /
